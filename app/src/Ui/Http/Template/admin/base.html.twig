<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>{% block title %}Our Wedding{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('admin') }}
    {% endblock %}
</head>
<body class="d-flex flex-column h-100">
<header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('invites') }}">Our Wedding</a>
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="nav-item">
                    <a class="nav-link{{ app.request.get('_route') == 'invites' ? ' active' }}" href="{{ path('invites') }}">Invites</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{{ app.request.get('_route') == 'food-choices' ? ' active' }}" href="{{ path('food-choices') }}">Food Choices</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{{ app.request.get('_route') == 'attending-guests' ? ' active' }}" href="{{ path('attending-guests') }}">Attending Guests</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{{ app.request.get('_route') == 'song-choices' ? ' active' }}" href="{{ path('song-choices') }}">Song Choices</a>
                </li>
            </ul>
        </div>
    </nav>
</header>
<main role="main" class="flex-shrink-0">
    <div class="container">
        {% block body %}{% endblock %}
    </div>
</main>
{% block javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}
</body>
</html>
